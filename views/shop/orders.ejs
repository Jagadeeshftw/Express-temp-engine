    <form action="/delete" method="POST">
      <input type="hidden" name="productId" value="<%=prod.id %>" />
      <button class="btn" type="submit">delete</button>
    </form>
    <% } %>
  </div>
  <hr>
  <div class="centered">
    <form action="/orders" method="POST">
  
      <button class="btn" type="submit">Pay now</button>
    </form>
  </div>
