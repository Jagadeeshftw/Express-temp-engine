<%- include('../includes/layouts',{ pageNam: pageName}) %>

<main class="centered">
  <h1><%= pro.title %></h1>
  <hr />
  <div class="grid">
    <article class="card product-item">
      <div class="card__image">
        <img src="<%= pro.imageURL %>" alt="<%= pro.title%>" />
      </div>
    </article>
  </div>

  <h2><%= pro.price %></h2>
  <p><%= pro.description %></p>
  <form action="/cart">
    <button class="btn" type="submit">Add to Cart</button>
  </form>
</main>

<%- include('../includes/end') %>
