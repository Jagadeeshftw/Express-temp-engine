<%- include('../includes/layouts',{ pageNam: pageName}) %>

    <main>
      <form class="product-form" action="/admin/<% if(edit){%>edit-product<%}else{%>add-product<%}%>" method="POST">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value ="<% if(edit){%> <%=prod.title%> <%}%>" />

          <label for="imageURL">Image URL</label>
          <input type="text" name="imageURL" id="imageURL" value ="<% if(edit){%><%=prod.imageURL%><%}%>" />

          <label for="price">Price</label>
          <input type="number" name="price" id="price" value ="<% if(edit){%><%=prod.price%><%}%>" />

          <label for="description">Description</label>
          <textarea name="description" id="description" cols="30" rows="5"><% if(edit){%><%=prod.description%><%}%></textarea>

          <input type="hidden" name="productId" value="<%= prod.id %>">
        </div>

        <button class="btn" type="submit"><% if(edit){%>Update Product<%}else{%>Add Product<%}%></button>
      </form>
    </main>
  </body>
</html>

<%- include('../includes/end') %>

